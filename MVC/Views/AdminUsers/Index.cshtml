@model IEnumerable<BusinessObject.User>
@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<h1 class="mt-4">@ViewData["Title"]</h1>
<p class="mb-4">Danh sách tất cả tài khoản người dùng và thông tin phân quyền.</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Họ và Tên</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-warning">Sửa</a> |
                    <form asp-action="Delete" asp-route-id="@item.UserId" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này không?');">
                        <input type="hidden" name="UserId" value="@item.UserId" />
                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>