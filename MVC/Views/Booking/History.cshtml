@model IEnumerable<BusinessObject.Booking>
@{
    ViewData["Title"] = "Lịch sử đặt vé";
}

<h1 class="mt-4">@ViewData["Title"]</h1>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">Bạn chưa có đơn đặt chỗ nào.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã ĐĐC</th>
                <th>Chuyến bay</th>
                <th>Ngày bay</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BookingId</td>
                    <td>@item.Flight?.FlightNumber</td>
                    <td>@item.Flight?.DepartureTime.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.TotalPrice.ToString("N0") VNĐ</td>
                    <td><span class="badge @(item.Status == "Cancelled" ? "bg-danger" : (item.Status == "Confirmed" ? "bg-success" : "bg-warning"))">@item.Status</span></td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-info">Xem chi tiết</a>

                        @if (item.Status != "Cancelled") // Chỉ cho hủy nếu chưa hủy
                        {
                            <form asp-action="Cancel" asp-route-id="@item.BookingId" method="post" class="d-inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn hủy đơn đặt chỗ này không?');">
                                <button type="submit" class="btn btn-sm btn-danger">Hủy vé</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}